<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/deaths"
        android:layout_centerHorizontal="true"
        android:textSize="60sp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:id="@+id/imageView3"
        android:background="@drawable/sinking_icon"
        android:layout_above="@+id/vesselLost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vessel lost?"
        android:id="@+id/textView4"
        android:textSize="40sp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3"
        android:layout_marginTop="27dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vesselLost"
        android:checked="false"
        android:scaleX="5"
        android:scaleY="5"
        android:layout_marginBottom="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/deaths"
        android:layout_alignEnd="@+id/deaths" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lives lost"
        android:id="@+id/textView2"
        android:textSize="40dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/decrement_death"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:id="@+id/imageView2"
        android:background= "@drawable/death_icon"
        android:layout_below="@+id/increment_death"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/increment_death"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/decrement_death"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>